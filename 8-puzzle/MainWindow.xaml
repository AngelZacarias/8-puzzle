        <Button x:Name="btn_Run" Content="Search Solution" HorizontalAlignment="Left" Margin="13,193,0,0" VerticalAlignment="Top" Width="156" Background="#FF1EA486" BorderBrush="White" Foreground="White" FontWeight="Bold" FontFamily="Open Sans" FontSize="14" BorderThickness="1" Click="btn_Run_Click"/>
