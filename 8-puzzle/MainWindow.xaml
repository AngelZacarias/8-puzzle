            <TextBox x:Name="txt_5" HorizontalAlignment="Left" Height="30" Margin="50,45,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="30" FontFamily="Open Sans" FontWeight="Bold" FontSize="16" TextAlignment="Center" Foreground="#FF1EA486" SelectionBrush="#FF1EA486"/>
